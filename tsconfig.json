{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
    "index.tsx"
  ]
}
