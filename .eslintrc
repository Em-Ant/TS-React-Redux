{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
  "rules": {
    "no-console": 1,
    "semi": 2,
    "indent": [2, 2],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"]
  }
}
